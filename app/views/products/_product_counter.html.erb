<div class="flex items-center p-1 bg-gray-100 rounded-md h-8" id="quantity-<%= product.id %>">
  <%= button_to "-", product_path(product), method: :patch, params: { product: { quantity: product.quantity - 1 } }, class: "w-6" %>
    <span class="w-7 text-center"><%= product.quantity %></span>
  <%= button_to "+", product_path(product), method: :patch, params: { product: { quantity: product.quantity + 1 } }, class: "w-6" %>
</div>