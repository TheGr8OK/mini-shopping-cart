<div id="<%= dom_id product %>" class="grid grid-cols-2">
  <div class="flex items-center gap-4">
    <%= image_tag product.image, class: "w-24 h-24" %>
    <%= product.name %>
  </div>

  <div class="flex items-center justify-between pl-8">
    <%= render "product_counter", product: %>
    <div class="grid grid-rows-3 gap-2 justify-items-end h-full">
      <div>
        <%= link_to product_path(product), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
          <%= render "icons/trash" %>
        <% end %>
      </div>
      <div class="text-gray-900 font-medium">
        $<%= product.price %>
      </div>
    </div>
  </div>
</div>

<div class="border-b border-gray-200 my-1.5"></div>
